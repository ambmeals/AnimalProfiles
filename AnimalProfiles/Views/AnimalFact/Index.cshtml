@{
    ViewData["Title"] = "Pet API Homepage";
}


<div id="app">
    {{ message }}
    <div v-for="petFact in petFacts">
        {{ petFact.ethelFact }}
        <br/>
        {{ petFact.xanderFact }}
        <br/>
        {{ petFact.zukoFact }}
        <br/>
        {{ petFact.chuiFact }}
    </div>
</div>

<script>
    const { createApp } = Vue

    createApp({
        data() {
            return {
                message: "An API dedicated to my pet's facts!",
                petFacts: [],
            };
        },
        mounted() {
            var self = this;
            
            self.getPetFacts();

        },
        methods: {
            getPetFacts() {
                var self = this;

                axios.get("/AnimalFact/GetPetFact")
                    .then(function (response) {
                        self.petFacts = response.data;
                    });
            },
        },
    }).mount('#app')



</script>
